{
    "baseUrl": "./src",
    "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "target": "es5",
       "moduleResolution": "node",
       "sourceMap": true,
       "outDir": "dist",
       "lib": [
          "es5",
          "es6"
       ]
    },
    "paths": {
       "@/*": "src/*"
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
       "es2015",
       "es6"
    ],
    "include": [
       "**/*.ts"
    ]
 }